<% image_name = ['new_york.jpg','chicago_park.jpg','uchicago_snow.jpg'][rand(3)]%>
<div style="position: absolute; top: 10%;
    background-image: url(<%='/assets/' + image_name%>); background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  height: auto;">
  <div style="background: black; margin: 4%;
    padding: 2.5%; color: whitesmoke; opacity: .75;">
    <h1 style="color: whitesmoke;"><%= @article.title %></h1>
    <br>
    <p><%= @article.body %></p>
    <% if user_signed_in? and current_user.admin%>
    <%= link_to "Edit", edit_article_path(@article), :class => "btn btn-primary" %>
      <%= link_to "Delete", article_path(@article),
                      method: :delete,
                      data: { confirm: "Are you sure?" }, :class => "btn btn-primary" %>
    <% end %>
  </div>
  <div style="background: black; margin: 4%;
    padding: 2.5%; color: whitesmoke; opacity: .75;">
    <% if user_signed_in?%>
      <h2 style="color: whitesmoke;">Add a comment:</h2>
      <%= render 'comments/form' %>
    <% end %>
  </div>
  <div style="background: black; margin: 4%;
    padding: 2.5%; color: whitesmoke; opacity: .5;">
    <h2 style="color: whitesmoke;">Comments</h2>
    <%= render @article.comments%>
  </div>
</div>